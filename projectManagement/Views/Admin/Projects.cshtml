@model IEnumerable<projectManagement.EF.project>

@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>

<table class="table">
    <tr>
        <th>
            Project ID
        </th>
        <th>
            Title
        </th>
        <th>
            Status
        </th>
        <th>
            Deadline
        </th>
        <th>
            Details
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pstatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.deadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dcp)
        </td>
        <td>
            <form method="post" action="/Admin/Projects">
                @if (item.pstatus == "confirmed")
                {
                    //input submit button
                    <input type="hidden" value="@item.pId" name="pId" />
                    <input type="submit" value="Approve" class="btn btn-primary" />
                }
                </form>
        </td>
    </tr>
}

</table>

